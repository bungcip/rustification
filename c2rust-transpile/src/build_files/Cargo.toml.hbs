{{#if is_workspace~}}
[workspace]
members = [
{{#each workspace_members}}    "{{{this}}}",
{{/each~}}
]
{{~/if}}

{{#if is_crate~}}
[package]
name = "{{crate_name}}"
authors = ["C2Rust"]
version = "0.0.0"
publish = false
edition = "2021"
autobins = false

{{#if is_library~}}
[lib]
name = "{{crate_rust_name}}"
path = "{{lib_rs_file}}"
crate-type = [{{{crate_types}}}]
{{~else~}}
[[bin]]
name = "{{crate_rust_name}}"
path = "{{lib_rs_file}}"
{{~/if}}

{{#each binaries}}
[[bin]]
path = "{{path}}"
name = "{{name}}"
{{/each}}
[dependencies]
{{#each dependencies~}}
{{this.name}} = "{{this.version}}"
{{/each}}

{{~/if}}
